{
  "manifest_version": 3,
  "name": "TAULuncher",
  "version": "1.0.0",
  "permissions": ["storage"],
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" },
  "action": {
    "default_popup": "popup.html",
    "default_title": "user data"
  },
  "content_scripts": [
    {
      "matches": [
        "*://nidp.tau.ac.il/nidp/*",
        "*://moodle.tau.ac.il/*",
        "*://www.ims.tau.ac.il/Tal/",
        "*://*.ims.tau.ac.il/Tal/",
        "*://ims.tau.ac.il/Tal/"
      ],
      "js": ["Content.js"]
    }
  ]
}
